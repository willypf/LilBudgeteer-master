<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.krisoflies.lilbudgeteer.MoneyCycleActivity"
    android:weightSum="1">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Please select the range of dates: "/>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Initial date: " android:padding="5dip"/>
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btnSetIniDate"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_column="1"

            android:layout_marginLeft="20dp"
            android:onClick="showTransactionDateDialog"
            android:shadowColor="#A87B8F"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="Set Date"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_theme="@array/grass"
            android:layout_marginRight="30dp"
            android:textAlignment="center"
            android:layout_weight="0.52"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Final date: " android:padding="5dip"/>

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btnSetFinDate"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_column="1"

            android:layout_marginLeft="20dp"
            android:onClick="showTransactionDateDialog"
            android:shadowColor="#A87B8F"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="Set Date"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_theme="@array/grass"
            android:layout_marginRight="30dp"
            android:textAlignment="center"
            android:layout_weight="0.41"
            android:gravity="center" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content">

    </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="My status:"
                android:id="@+id/txtStatus"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Outputs"
                android:id="@+id/txtOutputs"
                android:layout_column="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Incomes"
                android:id="@+id/txtIncomes"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Initial money"
                android:id="@+id/txtIniMoney"
                android:layout_column="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Categories:"
                android:id="@+id/txtCategories"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Salary"
                android:id="@+id/textView"
                android:layout_column="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sell"
                android:id="@+id/textView2"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Love"
                android:id="@+id/textView3"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mobility"
                android:id="@+id/textView4"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Food"
                android:id="@+id/textView5"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Clothes"
                android:id="@+id/textView6"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Party"
                android:id="@+id/textView7"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Debts"
                android:id="@+id/textView8"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Technology"
                android:id="@+id/textView9"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medicine"
                android:id="@+id/textView10"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Others"
                android:id="@+id/textView11"
                android:layout_column="1" />
        </TableRow>
    </TableLayout>
</LinearLayout>

