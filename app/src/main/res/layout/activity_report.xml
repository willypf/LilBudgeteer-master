<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.krisoflies.lilbudgeteer.ReportActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/txtPrinttoDownload"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:text="Print the report of your transactions\non your Dropbox Account"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.cengalabs.flatui.views.FlatButton
                android:id="@+id/btnPrintotoFile"
                android:layout_width="118dp"
                android:layout_height="38dp"
                android:layout_column="28"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"
                android:onClick="DropboxReporte"
                android:shadowColor="#A87B8F"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="Print"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                flatui:fl_blockButtonEffectHeight="3dp"
                flatui:fl_textAppearance="fl_light"
                flatui:fl_theme="@array/grass" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
